<cartridge>

    <!-- define the template objects that are made availble to the template -->
    <templateObject name="stringUtils" className="org.apache.commons.lang.StringUtils"/>
    
    <!-- cartridge-templateObject merge-point-->
    <property reference="projectId"/>
	<property reference="modelPackageName"/>
	<property reference="controllerPackageName"/>
    <property reference="customTypesPackage"/>
    <property reference="schemaDataBase"/>
    <property reference="dataBaseVersion"/>

    <!-- cartridge-property merge-point-->

    <!-- cartridge-resource merge-point -->


    <!-- android templates -->
	
    
    <template
        path="templates/android/Database.vsl"
        outputPattern="$generatedFile"
        outlet="entities"
        overwrite="true">
    </template>
    
    <template
        path="templates/android/DAO.vsl"
        outputPattern="$generatedFile"
        outlet="entities"
        overwrite="true">
    </template>
    
    <template
        path="templates/android/EntityFactory.vsl"
        outputPattern="{0}/{1}DAO.java"
        outlet="entities"
        overwrite="true">
        <modelElements>
            <modelElement  variable="entity">
                <type name="org.andromda.cartridges.hibernate.metafacades.CoppetecHibernateEntity">
                </type>                
            </modelElement>
        </modelElements>
    </template>
    
    <!-- API , camada de visão --> 
	<template
        path="templates/android/api/ActionCommander.vsl"
        outputPattern="$generatedFile"
        outlet="apiView"
        overwrite="true">
    </template>
    <template
        path="templates/android/api/Button.vsl"
        outputPattern="$generatedFile"
        outlet="apiView"
        overwrite="true">
    </template>
    <template
        path="templates/android/api/InputText.vsl"
        outputPattern="$generatedFile"
        outlet="apiView"
        overwrite="true">
    </template>
    <template
        path="templates/android/api/PageFacade.vsl"
        outputPattern="$generatedFile"
        outlet="apiView"
        overwrite="true">
    </template>
    <template
        path="templates/android/api/Session.vsl"
        outputPattern="$generatedFile"
        outlet="apiView"
        overwrite="true">
    </template>
    
    <!-- Implementação da API , camada de visão --> 
	<template
        path="templates/android/impl/ActivityHandler.vsl"
        outputPattern="$generatedFile"
        outlet="impl"
        overwrite="true">
    </template>
    <template
        path="templates/android/impl/ButtonImpl.vsl"
        outputPattern="$generatedFile"
        outlet="implView"
        overwrite="true">
    </template>
    <template
        path="templates/android/impl/InputTextImpl.vsl"
        outputPattern="$generatedFile"
        outlet="implView"
        overwrite="true">
    </template>
    <template
        path="templates/android/impl/PageFacadeImpl.vsl"
        outputPattern="$generatedFile"
        outlet="implView"
        overwrite="true">
    </template>
    <template
        path="templates/android/impl/SessionImpl.vsl"
        outputPattern="$generatedFile"
        outlet="implView"
        overwrite="true">
    </template>
    
    <!-- Classes do projeto, camada de visão -->
    
    <template
        path="templates/android/projeto/view/Controller.vsl"
        outputPattern="$generatedFile"
        outlet="controllers"
        overwrite="true">
        <modelElements variable="controller">
            <modelElement>
                <type name="org.andromda.cartridges.bpm4struts.metafacades.StrutsController">
                </type>
            </modelElement>
        </modelElements>
    </template>
    <template
        path="templates/android/projeto/view/ControllerImpl.vsl"
        outputPattern="$generatedFile"
        outlet="controllers"
        overwrite="true">
        <modelElements variable="controller">
            <modelElement>
                <type name="org.andromda.cartridges.bpm4struts.metafacades.StrutsController">
                </type>
            </modelElement>
        </modelElements>
    </template>
    <template
        path="templates/android/projeto/view/form/Form.vsl"
        outputPattern="$generatedFile"
        outlet="controllers"
        overwrite="true">
        <modelElements variable="controller">
            <modelElement>
                <type name="org.andromda.cartridges.bpm4struts.metafacades.StrutsController">
                </type>
            </modelElement>
        </modelElements>
    </template>
    
 

</cartridge>
